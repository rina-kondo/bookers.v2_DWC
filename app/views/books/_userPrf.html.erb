<h2>User info</h2>

<%= image_tag userprf.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= userprf.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= userprf.introduction %></th>
    </tr>
  </tbody>
</table>


<%= link_to edit_user_path(userprf.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>





