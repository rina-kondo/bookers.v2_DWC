<p id="notice"></p>
<%= render 'books/bookNewError', newbook: @newbook %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/userPrf', userprf: @userprf %>
      <%= render 'books/bookNew', newbook: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <tr>
          <td><%= image_tag @book.user.get_profile_image(80,80) %>
            <br/><%= link_to @book.user.name, user_path(@book.user_id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id === current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
