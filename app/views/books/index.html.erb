<p id="notice"></p>
<%= render 'books/bookNewError', newbook: @newbook %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/userPrf', userprf: @userprf %>
      <%= render 'books/bookNew', newbook: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

        <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to(user_path(book.user_id)) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </th>
            <th><%= link_to book.title, book_path(book) %></th>
            <th><%= book.body %></th>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>