<p id="notice"></p>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/currentUser', user: @user %>
      <%= render 'books/bookNew', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

        <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to(user_path(book.user_id)) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </th>
            <th><%= link_to book.title, book_path(book.user_id) %></th>
            <th><%= book.body %></th>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>