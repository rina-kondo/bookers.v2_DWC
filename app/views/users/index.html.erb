<p id="notice"></p>
<%= render 'books/bookNewError', newbook: @newbook %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/userPrf', userprf: @userprf %>
      <%= render 'books/bookNew', newbook: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>
